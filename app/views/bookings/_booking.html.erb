<% bookings.each do |booking| %>
  <div class="card mt-2 col-12 col-md-6" style="border-radius=5px;margin-top: 40px;padding: 8px;border-radius: 5px;">
    <a href="<%= booking_path(booking.id) %>">
      <div class="carousel-item-container">
        <div class="w-50">
          <img src="<%= cl_image_path booking.article.photo.key %>" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item-info">
          <div class="carousel-item-name mb-2" style="font-size: 14px"><%= booking.article.name %></div>
          <% if current_user.username != booking.user.username%>
            <div class="carousel-item-description mb-1" style="font-size: 12px">Demande de: <%= booking.user.username %></div>
          <% end %>
          <div class="carousel-item-description mb-1" style="font-size: 12px">Du: <%= booking.start_date.strftime('%d.%m.%Y') %> au <%= booking.end_date.strftime('%d.%m.%Y') %></div>
          <% if current_user.username == booking.user.username%>
            <div class="carousel-item-description mb-1" style="font-size: 12px">A rendre Ã : <%= booking.article.user.username %></div>
          <% end %>
        </div>
      </div>
    </a>
  </div>
<% end %>
