<% bookings.each do |booking| %>
  <div class="card rounded p-3 mt-3 col-12 col-md-6">
    <a href="<%= booking_path(booking.id) %>">
      <div class="carousel-item-container">
        <div class="w-50">
          <img src="<%= cl_image_path booking.article.photo.key %>" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item-info">
          <div class="carousel-item-name mb-1 fs-6"><%= booking.article.name %></div>
          <% if current_user.username != booking.user.username%>
            <div class="carousel-item-description mb-1 fs-6">Demande de: <%= booking.user.username %></div>
          <% end %>
          <div class="carousel-item-description mb-1 fs-6">Du: <%= booking.start_date.strftime('%d.%m.%Y') %> au <%= booking.end_date.strftime('%d.%m.%Y') %></div>
          <% if current_user.username == booking.user.username%>
            <div class="carousel-item-description mb-1 fs-6">A rendre Ã : <%= booking.article.user.username %></div>
          <% end %>
        </div>
      </div>
    </a>
  </div>
<% end %>
