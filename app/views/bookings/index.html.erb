      <% pendings.each do |booking| %>
        <div class="col-12 col-md-6">
          <div class="carousel-item-container">
            <div class="w-50">
              <img src="<%= booking.article.image_url%>" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item-info">
              <div class="carousel-item-name"><%= booking.article.name%></div>
              <div class="carousel-item-description"><%= booking.article.description%></div>
            </div>
          </div>
        </div>
      <% end %>
