<h1>Borrowed and Lent</h1>
<nav>
  <div class="nav nav-tabs" id="nav-tab" role="tablist">
    <button class="nav-link active" id="nav-borrowed-tab" data-bs-toggle="tab" data-bs-target="#nav-borrowed" type="button" role="tab" aria-controls="nav-borrowed" aria-selected="true">Borrowed</button>
    <button class="nav-link" id="nav-lent-tab" data-bs-toggle="tab" data-bs-target="#nav-lent" type="button" role="tab" aria-controls="nav-lent" aria-selected="false">Lent</button>
  </div>
</nav>
<div class="tab-content" id="nav-tabContent">
  <div class="tab-pane fade show active" id="nav-borrowed" role="tabpanel" aria-labelledby="nav-borrowed-tab">
    <div class="row">
      <% pendings =  @borrowed.select{ |booking| booking["status"] == "pending" }%>
      <% confirmed =  @borrowed.select{ |booking| booking["status"] == "confirmed" }%>
      <% finished =  @borrowed.select{ |booking| booking["status"] == "finished" }%>
      <% declined =  @borrowed.select{ |booking| booking["status"] == "declined" }%>
