<div class="booking-new">
  <div class="text-center mt-5">
    <h2>Demande de réservation</h2>
  </div>
  <div class="mt-3 mb-4" style=" border-radius: 5px; padding: 8px;">
    <div class="card-body">
      <p><%= @article.name %>, article proposé par Capy <%= @article.user.username %></p>
      <img src="<%= cl_image_path @article.photo.key %>" class="booking-image">
      <div class="card mt-2 bg-light" style=" border-radius: 5px; padding: 8px;">
        <div class="card-body">
          <h5 class="card-title text-center">Détails de l'article</h5>
          <%= @article.description %>
        </div>
      </div>
    </div>
    <%= simple_form_for [@article, @booking] do |f| %>
      <div class="container shadow pb-3 py-2">
        <div class="form-row d-flex date-fields-container">
          <div class="dates-container form-inline d-flex flex-row"
          data-controller="bookingdate"
          data-bookingdate-bookings-value="<%= @reserved %>">
            <div class="form-group mb-0 mx-2">
              <input type="text" name="booking[start_date]" class="form-control" placeholder="Date de début">
            </div>
            <div class="form-group mb-0 mx-2">
              <input type="text" name="booking[end_date]" class="form-control" placeholder="Date de fin">
            </div>
          </div>
        </div>
        <div class="text-center mt-3 mb-3"><%= f.submit "Reserver", class: "btn btn-warning btn-lg", style: "border-radius: 25px; color: white;" %></div>
      </div>
    <% end %>
  </div>
</div>
