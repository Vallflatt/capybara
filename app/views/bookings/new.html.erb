<div class="booking-new">
  <h2 class="text-center my-5">Demande de réservation</h2>
  <div class="px-3 mb-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title fw-bold">
          <%= @article.name %>
        </h5>
        <p class="card-text">
          Article proposé par Capy <%= @article.user.username %>
        </p>
      </div>
      <img src="<%= cl_image_path @article.photo.key %>" class="card-img-bottom">
    </div>
    <div class="card my-3">
      <div class="card-header">Détails de l'article</div>
      <div class="card-body">
        <%= @article.description %>
      </div>
    </div>
    <%= simple_form_for [@article, @booking] do |f| %>
      <div class="py-3">
        <div class="form-row d-flex date-fields-container">
          <div class="dates-container form-inline d-flex flex-row"
          data-controller="bookingdate"
          data-bookingdate-bookings-value="<%= @reserved %>">
            <div class="form-group mb-0 me-1">
              <input type="text" name="booking[start_date]" class="form-control" placeholder="Date de début">
            </div>
            <div class="form-group mb-0 ms-1">
              <input type="text" name="booking[end_date]" class="form-control" placeholder="Date de fin">
            </div>
          </div>
        </div>
        <div class="text-center my-3"><%= f.submit "Réserver", class: "btn btn-main rounded-pill btn-lg"%></div>
      </div>
    <% end %>
  </div>
</div>
