<div class="text-center mt-5">
  <h2>Demande de réservation</h2>
</div>
<div class="mt-3 mb-4" style=" border-radius: 5px; padding: 8px;">
  <div class="card-body">
    <p><%= @article.name %>, article proposé par Capy <%= @article.user.username %></p>
  </div>
</div>
<%= simple_form_for [@article, @booking] do |f| %>
  <%= image_tag @article.image_url, class:"img-fluid"%>
  <div class="card mt-2 bg-light" style=" border-radius: 5px; padding: 8px;">
    <div class="card-body">
      <h5 class="card-title text-center">Détails de l'article</h5>
      <%= @article.description %>
    </div>
  </div>
  <div class="container shadow pb-3 py-2">
    <div class="form-row d-flex date-fields-container">
      <div class="col-lg-3 col-sm-6">
        <label for="startDate"></label>
        <%=f.date_field :start_date, "data-booking-form-target": "startDate", class:"form-control"%>
        <span id="startDateSelected"></span>
      </div>
      <div class="col-lg-3 col-sm-6">
        <label for="endDate"></label>
        <%=f.date_field :end_date, "data-booking-form-target": "endDate", class:"form-control"%>
        <span id="endDateSelected"></span>
      </div>
    </div>
    <div class="text-center mb-3"><%= f.submit "Reserver", class: "btn btn-warning btn-lg", style: "border-radius: 25px; color: white;" %></div>
  </div>
<% end %>
