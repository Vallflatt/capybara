<h1>Pages#home</h1>
<p>Display search form</p>
<form action="/articles/search" method="GET">
  <label for="search">Article</label>
  <input type="text" name="search" id="search">
  <label for="address">Address</label>
  <input type="text" name="address" id="address">
  <button type=submit>Search</button>
</form>
<p>display last 5</p>
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <% @articles.each_with_index do |article, index| %>
      <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
        <div class="carousel-item-container">
          <div class="w-50">
            <img src="<%= article.image_url%>" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item-info">
            <div class="carousel-item-name"><%= article.name%></div>
            <div class="carousel-item-description"><%= article.description%></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
