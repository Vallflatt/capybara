<div class="homepage text-center my-5">
  <h2>Rechercher un article</h2>
</div>
<div class="m-4 form-row justify-content-center">
  <%= render 'pages/search_form' %>
</div>
<div class="container">
  <div class="row">
    <div class="col">
    </div>
  </div>
</div>
<div class="rounded-4 mb-5" style="width: 100%; height: 500px"
  data-controller="map"
  data-map-markers-value="<%= @markers %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
  data-map-userlocation-value="<%= @user_location %>">
  <p class="homepage-error"
  style="display: none"
  data-map-target="markerError">Nous n'avons pas trouvé d'articles correspondants</p>
  <p class="homepage-error"
  style="display: none"
  data-map-target="locationError">Nous n'avons pas trouvé cette adresse</p>
</div>
