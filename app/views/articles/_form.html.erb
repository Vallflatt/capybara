<%= simple_form_for @article do |f| %>
  <div class="mb-4"><%= f.input :name, label: false, placeholder: "Nom de l'article", input_html:{ autofocus: true } %></div>
  <div class="mb-4"><%= f.input :description, label: false, placeholder: "Description de l'article" %></div>
  <div class="mb-4"><%= f.input :photo, as: :file %></div>
  <% if @article.id != nil %>
    <div class="d-flex justify-content-center mb-4"><%= cl_image_tag @article.photo.key, width: 200%></div>
  <% end %>
  <div class="mb-4"><%= f.input :street, label: false, placeholder: "Rue / nÂ°" %></div>
  <div class="mb-4"><%= f.input :city, label: false, placeholder: "Ville" %></div>
  <div class="mb-4"><%= f.input :zipcode, label: false, placeholder: "Code Postal" %></div>
  <div class="mb-4"><%= f.input :available, as: :boolean, label: "Disponible"%></div>
  <div class="text-center"><%= f.submit "Enregistrer", class: "btn btn-success btn-lg", style: "border-radius: 25px; color: white;"%></div>
<% end %>
