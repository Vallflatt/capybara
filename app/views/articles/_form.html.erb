<%= simple_form_for @article do |f| %>
  <%= f.input :name, label: false, placeholder: "Nom de l'article", input_html:{ autofocus: true } %>
  <%= f.input :description, label: false, placeholder: "Description de l'article" %>
  <%= f.input :photo, as: :file %>
  <% if @article.id != nil %>
    <%= cl_image_tag @article.photo.key, width: 200%>
  <% end %>
  <%= f.input :street, label: false, placeholder: "Rue / nÂ°" %>
  <%= f.input :city, label: false, placeholder: "Ville" %>
  <%= f.input :zipcode, label: false, placeholder: "Code Postal" %>
  <%= f.input :available, as: :boolean, label: "Disponible"%>
  <div class="text-center"><%= f.submit "Enregistrer", class: "btn btn-success btn-lg", style: "border-radius: 25px; color: white;"%></div>
<% end %>
