<div class="homepage text-center fs-4 my-5">
  <p>Détails de l'article</p>
</div>
<div class="article-show" style="padding: 0px 20px 20px 20px">
  <div class="mb-4 d-flex justify-content-center" ><img src="<%= cl_image_path @article.photo.key %>" class="article-picture" style="width: 100%; border-radius: 5px;"></div>
  <div class="card mt-2 bg-light mb-4" style=" border-radius: 5px; padding: 8px;">
    <div class="pb-4">
      <div class="m-2 fw-bold text-uppercase"><%= @article.name %></div>
      <div class="m-2"><%= @article.description %></div>
    </div>
    <div class="m-2 fw-bold">
      Localisation de l'article
    </div>
    <div class="m-2">Adresse: <%= @article.street %></div>
    <div class="m-2">Localité: <%= @article.city %></div>
    <div class="m-2">Code postal: <%= @article.zipcode %></div>
    <%# boolean pour availability %>
    <div class="m-2">Statut: <%= @article.available ? "Public" : "Privé" %></div>
  </div>
  <div class="d-flex">
    <div class="col d-flex justify-content-start">
      <%= link_to "Mes Articles", articles_path, class: 'btn btn-warning text-white', class: "btn btn-warning", style: "border-radius: 25px; color: white; width: 157px" %>
    </div>
    <div class="col d-flex justify-content-end">
      <%= link_to "Modifier cet article", edit_article_path(@article), class: 'btn btn-warning text-white', class: "btn btn-warning", style: "border-radius: 25px; color: white; width: 157px" %>
    </div>
  </div>
  <div class="col mt-4 d-flex justify-content-center">
    <button onclick="history.back()" class='btn btn-secondary text-white' style="border-radius: 25px; color: white; width: 130px"">Retour</button>
  </div>
</div>
